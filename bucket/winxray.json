{
    "version": "1.3.8",
    "description": "A GUI for Xray with auto selecting servers",
    "homepage": "https://github.com/winXray/winXray",
    "license": "The author gives up the copyright!",
    "architecture": {
        "64bit": {
            "url": "https://raw.githubusercontent.com/winXray/winXray/master/release/winXray.7z",
            "hash": "89cf598fa2cb2dc27ba094a3d359bce9f9e3118eb20baafd4b47569793847228"
        },
        "32bit": {
            "url": "https://raw.githubusercontent.com/winXray/winXray/master/release/winXray32.7z",
            "hash": "6f6aa7ae2c07ccb3bb4f4a30e2a57d0d3ed26807706e66595c730ef3a41c983f"
        }
    },
    "bin": "winXray.exe",
    "shortcuts": [
        [
            "winXray.exe",
            "winXray"
        ]
    ],
    "pre_install": [
        "function CreateFile([String] $file, [String] $content = $null) {",
        "    if (!(Test-Path \"$persist_dir\\xray-core\\$file\")) {",
        "        New-Item -Force -Path \"$persist_dir\\$file\" -ItemType file -Value $content | Out-Null",
        "    }",
        "}",
        "function CopyFile([String] $file, [String] $content = $null) {",
        "    if (!(Test-Path \"$persist_dir\\xray-core\\$file\")) {",
        "        Copy-Item \"$(appdir v2ray $global)\\current\\xray-core\\winXray-default-servers.json\" \"$persist_dir\\xray-core\" | Out-Null",
        "    }",
        "}",
        "CreateFile 'config.json'",
        "CopyFile 'winXray-default-servers.json'"
    ],
    "persist": [
        "xray-core\\config.json",
        "xray-core\\winXray-default-servers.json"
    ]
}
